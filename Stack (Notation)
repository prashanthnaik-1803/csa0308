#include <stdio.h>
#include <ctype.h>

#define MAX 100
char stack[MAX];
int top = -1;

void push(char x){ stack[++top] = x; }
char pop(){ return (top == -1) ? -1 : stack[top--]; }
int prec(char x){
    if(x=='+'||x=='-') return 1;
    if(x=='*'||x=='/') return 2;
    return 0;
}

int main() {
    char exp[MAX], *e, x;
    printf("Enter Infix Expression: ");
    scanf("%s", exp);

    printf("Postfix Expression: ");
    for(e = exp; *e != '\0'; e++) {
        if(isalnum(*e)) printf("%c", *e);
        else if(*e == '(') push(*e);
        else if(*e == ')'){
            while((x = pop()) != '(') printf("%c", x);
        } else {
            while(prec(stack[top]) >= prec(*e)) printf("%c", pop());
            push(*e);
        }
    }
    while(top != -1) printf("%c", pop());
    return 0;
}
