#include <stdio.h>
#define INF 9999
#define MAX 20

void prims(int graph[MAX][MAX], int n) {
    int selected[MAX];
    int no_of_edges = 0;
    int x, y; // vertices
    int total_cost = 0;

    // Initially no vertices are selected
    for (int i = 0; i < n; i++)
        selected[i] = 0;

    selected[0] = 1; // start from vertex 0

    printf("Edge\tWeight\n");

    while (no_of_edges < n - 1) {
        int min = INF;
        x = 0;
        y = 0;

        for (int i = 0; i < n; i++) {
            if (selected[i]) {
                for (int j = 0; j < n; j++) {
                    if (!selected[j] && graph[i][j]) { // if not selected and edge exists
                        if (min > graph[i][j]) {
                            min = graph[i][j];
                            x = i;
                            y = j;
                        }
                    }
                }
            }
        }

        printf("%d - %d\t%d\n", x, y, graph[x][y]);
        total_cost += graph[x][y];
        selected[y] = 1;
        no_of_edges++;
    }

    printf("Total cost of MST = %d\n", total_cost);
}

int main() {
    int n;
    int graph[MAX][MAX];

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix (0 if no edge):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &graph[i][j]);

    prims(graph, n);

    return 0;
}
