#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};
struct Node* head = NULL;

void insert(int value) {
    struct Node* newNode = malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = head;
    head = newNode;
}

void delete(int value) {
    struct Node *temp = head, *prev = NULL;
    if (temp && temp->data == value) {
        head = temp->next;
        free(temp);
        return;
    }
    while (temp && temp->data != value) {
        prev = temp;
        temp = temp->next;
    }
    if (temp) {
        prev->next = temp->next;
        free(temp);
    }
}

void display() {
    struct Node* temp = head;
    while (temp) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    insert(10);
    insert(20);
    insert(30);
    display();       // Output: 30 -> 20 -> 10 -> NULL

    delete(20);
    display();       // Output: 30 -> 10 -> NULL

    return 0;
}
